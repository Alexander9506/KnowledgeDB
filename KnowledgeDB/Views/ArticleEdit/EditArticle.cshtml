@model Article

@section styles{
    <link rel="stylesheet" href="~/lib/simplemde/simplemde.min.css" />
}

@{
    string tagListString = null;
    if (Model.RefToTags != null)
    {
        tagListString = String.Join(", ", Model.RefToTags.Select(rtt => $"#{rtt.ArticelTag.Name}"));
    }
}

@section header_toolbar{
    <a image="Save" id="saveButton" class="text-primary">Save</a>
    <a image="FileExplorer" id="toggleFileExplorer" class="text-primary">File Explorer</a>
    <a image="Close" asp-action="List" asp-controller="Article" class="text-primary">Close</a>
}

@section expanding_sidebar{
    @*File Explorer*@
    <div id="file-explorer" class="container d-none">
        <div id="file-explorer-header" class="form-group row m-0 justify-content-between">
            <input id="file-explorer-search" class="form-control flex-grow-1 w-auto mr-2" type="search" name="search" placeholder="Search" aria-label="Search" autocomplete="off" />
            
            <div>
                <input id="file-explorer-add-file" multiple type="file" class="d-none" />
                <button type="button" image="New" image-classes="p-1" class="btn btn-outline-secondary ml-1" onclick="document.getElementById('file-explorer-add-file').click()">Add File</button>
                <button type="button" image="Sync" image-classes="p-1" class="btn btn-outline-success ml-1" id="reloadFiles">Reload</button>
            </div>
        </div>

        <div id="file-explorer-settings" class="row m-0 my-2">
            <span class="text-black-50 col">Settings</span>
            <div class="custom-control custom-switch col">
                <input type="checkbox" class="custom-control-input" id="file-explorer-cbox-preview-images">
                <label class="custom-control-label" for="file-explorer-cbox-preview-images">Show preview images</label>
            </div>
        </div>

        <div>
            <ul id="file-explorer-files" class="list-group">
            </ul>
        </div>
    </div>
}

<span id="ImageURL" style="display:none;">@Url.Action("GetFiles", "File")</span>
<span id="DeleteFileURL" style="display:none;">@Url.Action("DeleteFile", "File")</span>
<span id="UploadURL" style="display:none;">@Url.Action("UploadFiles", "File")</span>

<h2>EDIT ARTICLE</h2>

<form id="articleForm" method="post" asp-action="SaveArticle" asp-controller="ArticleEdit">
    <input type="hidden" name="returnUrl" value="@Url.Action("ShowArticle", "Article", new { articleId= Model.ArticleId })" />
    <input type="hidden" asp-for="ArticleId" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Summary"></label>
        <textarea class="form-control" rows="3" asp-for="Summary" autocomplete="off"></textarea>
        <span asp-validation-for="Summary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Tags</label>
        <input class="form-control" type="text" id="articleTags" value="@tagListString" />
    </div>
    <div class="form-group">
        <label asp-for="TeaserImagePath"></label>
        <input class="form-control" asp-for="TeaserImagePath" />
    </div>

    <div class="form-group">
        <label asp-for="Content"></label>
        <div>
            <div>
                <textarea id="editor" asp-for="Content" class="form-control"></textarea>
            </div>
        </div>
    </div>
    <button id="submitButton" type="submit" class="d-none">Save</button>
</form>

